doctype html 
html 
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title Список квартир | Жилой комплекс "ЛДМ"
        link(rel="stylesheet", href="../styles/style.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    body
        .container-fluid.header-container.py-3
            .d-flex.align-items-center
                .col-xl-3.my-xl-3.px-xl-5.d-flex.align-items-center
                    img.mx-md-5.ms-md-0.ms-5.ps-3.w-xl-50(src="../assets/logo.png",height="40")
                    button.navbar-toggler.d-md-none.ms-3(type="button", data-bs-toggle="offcanvas", data-bs-target="#offcanvasMenu", aria-controls="offcanvasMenu")
                        span.navbar-toggler-icon
                .col-xl-9
                    .d-none.d-md-flex.gap-4.align-items-center
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/index.html") О комплексе
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/flatlist.html") Квартиры
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/gallery.html") Галерея
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/documents.html") Документы
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/contacts.html") Контакты
        .offcanvas.offcanvas-end.bg-dark.text-white#offcanvasMenu()
            .offcanvas-header.mt-2.ms-3.d-flex.justify-content-center.align-items-center
                h5 ЖК "ЛДМ"
                button.btn-close.btn-close-white.pe-5(type="button", data-bs-dismiss="offcanvas", aria-label="Закрыть")
            .offcanvas-body.ms-3
                ul.nav.flex-column
                    li.nav-item
                        a.nav-link.text-white(href="../pug/index.html") О комплексе
                    li.nav-item
                        a.nav-link.text-white(href="../pug/flatlist.html") Квартиры
                    li.nav-item
                        a.nav-link.text-white(href="../pug/gallery.html") Галерея
                    li.nav-item
                        a.nav-link.text-white(href="../pug/documents.html") Документы
                    li.nav-item
                        a.nav-link.text-white(href="../pug/contacts.html") Контакты
        .body-container
            .container-fluid 
                .row
                    .col-xl
                        .text-container
                            .row
                                h2 Список квартир
                            .row.mb-5.mb-md-0
                                .col.d-flex.filters-row.col-xl-3
                                    button.btn-rooms#btn-filter Студия
                                    button.btn-rooms.circle#btn-filter 1
                                    button.btn-rooms.circle#btn-filter 2
                                    button.btn-rooms.circle#btn-filter 3
                                .col.filters-row
                                    .row
                                        .col-xl-4.d-flex.col-12
                                            p.md-price-mobile Цена от:
                                            input.price#price-start(type="text" placeholder="1000000")
                                        .col-xl-4.d-flex.col-12
                                            p.ms-5.ps-2 до:
                                            input.price#price-end(type="text" placeholder="25000000")
                            .row.mt-lg-5.d-flex.justify-content-center#flats-container
                                .text-center.mt-4
                                    button.btn-rooms.more.mb-3.center#loadMoreBtn Показать ещё
                            
    script(stc="load_flats.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    include ../pug/footer.pug