                    li.nav-item
                        a.nav-link.text-white(href="../pug/gallery.html") Галерея
                    li.nav-item
                        a.nav-link.text-white(href="../pug/documents.html") Документы
                    li.nav-item
                        a.nav-link.text-white(href="../pug/contacts.html") Контакты
        .body-container
            .container-fluid 
                .row
                    .col-xl
                        .text-container
                            h2 Документы
                            .documents-container.container-fluid 
                                each doc in documents
                                    .row.mb-4 
                                        .col-xl-2
                                        .col-xl-8.ps-3.document-main
                                            .row 
                                                .col-lg-11.col-10
                                                    p.document-name.mt-2= doc.name
                                                    p.document-desc Загружено #{doc.date} в #{doc.time}
                                                .col-lg-1.col-2.d-flex.align-items-center.document-button.pt-2
                                                    a(href=doc.link)
                                                        img.document-save.img-fluid.pb-3(src="../assets/icons/icon_download.svg")
                                        .col-xl-2
