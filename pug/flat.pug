doctype html 
html 
    head
        meta(charset="UTF-8")
        title Квартира | Жилой комплекс "ЛДМ"
        link(rel="stylesheet",href="../styles/style.css")
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        
        .container-fluid.header-container
            .row.d-flex.align-items-center.py-4
                .col-xl-3.d-flex.align-items-center
                    a.logo.mx-5(href="../pug/index.html")
                            img(src="../assets/logo.png",height="40")
                .col-xl-9
                    .row.px-5.d-flex.align-items-center 
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/index.html") О комплексе
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/flatlist.html") Квартиры
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="#") Галерея
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/documents.html") Документы
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/contacts.html") Контакты
    body
        .body-container
            .container-fluid 
                .row
                    .flat-title.d-flex.align-items-center.gap-2
                        a(href="../pug/flatlist.html")
                            img.img-fluid.return.pb-3(src="../assets/icons/icon_back.svg")
                        h2 Квартира №999
                    .col-xl-6.order-2.order-xl-1.mb-5
                        .text-container.flats
                            .row.d-flex.align-items-end
                                .col-8
                                    p.flat-parameter Количество комнат: 
                                .col.text-end
                                    p.flat-info Студия
                            .row.d-flex.align-items-end.mt-2
                                .col
                                    p.flat-parameter Секция: 
                                .col.text-end
                                    p.flat-info 999
                            .row.d-flex.align-items-end.mt-2
                                .col
                                    p.flat-parameter Этаж: 
                                .col.text-end
                                    p.flat-info 99 из 99
                            .row.d-flex.align-items-end.mt-2
                                .col
                                    p.flat-parameter Площадь: 
                                .col.text-end
                                    p.flat-info 99.99 м<sup>2</sup>
                            .row.d-flex.align-items-end.mt-2
                                .col
                                    p.flat-parameter Жилая площадь: 
                                .col.text-end
                                    p.flat-info 99.99 м<sup>2</sup>
                            .row.d-flex.align-items-end.mt-2
                                .col
                                    p.flat-parameter Площадь кухни: 
                                .col.text-end
                                    p.flat-info 99.99 м<sup>2</sup>
                            .row.d-flex.align-items-end.mt-2
                                .col-xl-8.col-6
                                    p.flat-parameter Стоимость при 100% оплате:  
                                .col.text-end
                                    p.flat-info 99 999 999 ₽
                            .row.d-flex.align-items-end
                                .col
                                .col.text-end
                                    p.flat-smaller 999 999 ₽/м<sup>2</sup>
                    .col-xl-6.flat-plan.order-1.order-xl-2
                        img.flat-image.img-fluid.mt-5.px-5(src="../assets/plans/1.png")
                .row 
                    .col.d-flex.align-items-center
                        .text-container
                            h2 Забронировать квартиру:
                .row.mb-5
                    .col-xl-3.col-1
                    .col-xl-6.mb-5.col-10
                        .contact-form
                            form
                                .mb-3
                                    label.form-label(for="name") Имя:
                                    input#name.form-control(type="text" placeholder="Ваше имя")
                                .mb-3
                                    label.form-label(for="number") Номер телефона:
                                    input#number.form-control(type="text" placeholder="+7")
                                .mb-3
                                    label.form-label(for="email") Электронный адрес:
                                    input#email.form-control(type="text" placeholder="address@mail.com")
                            .d-flex.justify-content-center
                                button.btn-primary.btn-lg Оставить заявку
                    .col-xl-3.col-1
    include ../pug/footer.pug