doctype html 
html 
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title Квартира | Жилой комплекс "ЛДМ"
        link(rel="stylesheet", href="../styles/style.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    body
        .container-fluid.header-container.py-3
            .d-flex.align-items-center
                .col-xl-3.my-xl-3.px-xl-5.d-flex.align-items-center
                    img.mx-md-5.ms-md-0.ms-5.ps-3.w-xl-50(src="../assets/logo.png",height="40")
                    button.navbar-toggler.d-md-none.ms-3(type="button", data-bs-toggle="offcanvas", data-bs-target="#offcanvasMenu", aria-controls="offcanvasMenu")
                        span.navbar-toggler-icon
                .col-xl-9
                    .d-none.d-md-flex.gap-4.align-items-center
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/index.html") О комплексе
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/flatlist.html") Квартиры
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/gallery.html") Галерея
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/documents.html") Документы
                        .col-xl.d-flex.justify-content-center
                            a.nav-link.text-white(href="../pug/contacts.html") Контакты

        .offcanvas.offcanvas-end.bg-dark.text-white#offcanvasMenu()
            .offcanvas-header.mt-2.ms-3.d-flex.justify-content-center.align-items-center
                h5 ЖК "ЛДМ"
                button.btn-close.btn-close-white.pe-5(type="button", data-bs-dismiss="offcanvas", aria-label="Закрыть")
            .offcanvas-body.ms-3
                ul.nav.flex-column
                    li.nav-item
                        a.nav-link.text-white(href="../pug/index.html") О комплексе
                    li.nav-item
                        a.nav-link.text-white(href="../pug/flatlist.html") Квартиры
                    li.nav-item
                        a.nav-link.text-white(href="../pug/gallery.html") Галерея
                    li.nav-item
                        a.nav-link.text-white(href="../pug/documents.html") Документы
                    li.nav-item
                        a.nav-link.text-white(href="../pug/contacts.html") Контакты

        .body-container
            .container-fluid 
                .row
                    .flat-title.d-flex.align-items-center.gap-2
                        a(href="../pug/flatlist.html")
                            img.img-fluid.return.pb-3(src="../assets/icons/icon_back.svg")
                        h2#flat_number Квартира №999
                    .col-lg-6.order-2.order-lg-1.mb-lg-5.mt-lg-0.mt-3
                        .text-container.flats.ms-lg-5
                            .row.d-flex.align-items-end.mt-2
                                .col-8
                                    p.flat-parameter Количество комнат: 
                                .col.text-end
                                    p.flat-info#flat_rooms Студия
                            .row.d-flex.align-items-end.mt-2
                                .col
                                    p.flat-parameter Секция: 
                                .col.text-end
                                    p.flat-info#flat_section 999
                            .row.d-flex.align-items-end.mt-2
                                .col
                                    p.flat-parameter Этаж: 
                                .col.text-end
                                    p.flat-info#flat_floor 99 из 99
                            .row.d-flex.align-items-end.mt-2
                                .col
                                    p.flat-parameter Площадь: 
                                .col.text-end
                                    p.flat-info#flat_area 99.99 м<sup>2</sup>
                            .row.d-flex.align-items-end.mt-2
                                .col
                                    p.flat-parameter Жилая площадь: 
                                .col.text-end
                                    p.flat-info#flat_areaLiving 99.99 м<sup>2</sup>
                            .row.d-flex.align-items-end.mt-2
                                .col
                                    p.flat-parameter Площадь кухни: 
                                .col.text-end
                                    p.flat-info#flat_areaKitchen 99.99 м<sup>2</sup>
                            .row.d-flex.align-items-end.mt-2
                                .col-xl-8.col-6
                                    p.flat-parameter Стоимость при 100% оплате:  
                                .col.text-end
                                    p.flat-info#flat_price 99 999 999 ₽
                            .row.d-flex.align-items-end
                                .col
                                .col.text-end
                                    p.flat-smaller#flat_meterPrice 999 999 ₽/м<sup>2</sup>
                    .col-lg-6.flat-plan.order-1.order-lg-2.d-flex.justify-content-center
                        img.flat-image.img-fluid.mt-lg-5.px-5#flat_plan(src="../assets/plans/1-2.png")
                .row 
                    .col.d-flex.align-items-center
                        .text-container
                            h2.d-none.d-lg-block Забронировать квартиру:
                            h2.d-lg-none Забронировать:
                .row.mb-5
                    .col-xl-3.col-1
                    .col-xl-6.mb-lg-5.col-10
                        .contact-form
                            form
                                .mb-3
                                    label.form-label(for="name") Имя:
                                    input#name.form-control(type="text" placeholder="Ваше имя")
                                .mb-3
                                    label.form-label(for="number") Номер телефона:
                                    input#number.form-control(type="text" placeholder="+7")
                                .mb-3
                                    label.form-label(for="email") Электронный адрес:
                                    input#email.form-control(type="text" placeholder="address@mail.com")
                            .d-flex.justify-content-center
                                button.btn-rooms.action.mb-3.center.w-75.mt-4 Оставить заявку
                    .col-xl-3.col-1
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    include ../pug/footer.pug